<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="Hub.SettingsController" spacing="15" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Settings" style="-fx-font-size: 22px;" />
    <!--HBox spacing="10" HBox.hgrow="ALWAYS">
        <Label text="Window Size:" />
        <ComboBox fx:id="resolutionBox" maxWidth="200" minWidth="150" />
    </HBox-->
    <HBox spacing="10" HBox.hgrow="ALWAYS" alignment="CENTER">
        <Label text="Music Volume:" />
        <Slider fx:id="volumeSlider" min="0" max="1" value="0.5" />
    </HBox>
    <Button fx:id="PauseButton" text="Pause Music" onAction="#pauseMusic" maxWidth="200" minWidth="150" />
    <Button fx:id="resumeButton" text="Resume Music" onAction="#resumeMusic" maxWidth="200" minWidth="150" />
    <Button text="Main Menu" onAction="#goToMainMenu" maxWidth="200" minWidth="150" />
</VBox>

<!-- This is the settings page for the Playground Hub application. It allows users to adjust the window size and music volume. -->